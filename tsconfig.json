{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "@app/*": ["./src/ui/app/*"],
      "@web/*": ["./src/ui/web/*"],
      "@lib/*": ["./src/ui/lib/*"],
      "@styles/*": ["./src/ui/styles/*"],
      "@components/*": ["./src/ui/components/*"],
      "@hooks/*": ["./src/ui/hooks/*"],
      "@/*": ["./src/*"],
      "@docs/*": ["./docs/*"],
    },
  },
  "include": ["**/*"]
}
